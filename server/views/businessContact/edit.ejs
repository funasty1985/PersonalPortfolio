<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        name="name"
                        id="nameTextField"
                        value="<%= contact.contactName %>"
                        required
                    >
                </div>
                <div class="form-group">
                    <label for="nameTextField">Number</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        name="number"
                        id="numberTextField"
                        value="<%= contact.contactNumber %>"
                        required
                    >
                </div>
                <div class="form-group mb-3">
                    <label for="nameTextField">Email</label>
                    <input 
                        type="email" 
                        class="form-control" 
                        name="email"
                        id="nameTextField"
                        value="<%= contact.email%>"
                        required
                    >
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>
                    Edit
                </button>
                <a href="/businessContact" class="btn btn-warning">
                    <i class="fas fa-undo">Cancel</i>
                </a>
            </form>
        </div>
    </div>
</div>