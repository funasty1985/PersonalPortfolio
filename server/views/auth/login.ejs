<% if(messages.length > 0) {%>
    <div class="alert alert-danger">
        <%= messages %>
    </div>
<% } %>

<div class="row">
    <div class="offset-md-4 col-md-4">
        <h1>Please Login</h1>
        <form autocomplete="off" method="POST">
            <fieldset class="form-group">
                <label for="username">
                    Username:
                </label>
                <input 
                    type="text" 
                    class="form-control"
                    name="username"
                    placeholder="admin"
                    id="username"
                    required
                    autofocus
                    >
            </fieldset>
            <fieldset class="form-group mt-2">
                <label for="password">
                    Password:
                </label>
                <input 
                    type="text" 
                    class="form-control"
                    name="password"
                    placeholder="123456"
                    id="passowrd"
                    required
                    >
                or 
                <a href="/register">Register Here</a>
            </fieldset>
            <fieldset class="form-group test-right mt-3">
                <input type="submit" class="btn btn-success" value="Login">
                <a href="/" class="btn btn-warning" style="padding: 0px;">
                    <input type="button" class="btn btn-warning" value="cancel">
                </a>
            </fieldset>
        </form>
    </div>
</div>